<div class="pt-4 pl-4">
    <div class="flex items-center">
        <h3 class="text-2xl">@CartGroup.Name</h3>
        <div class="relative w-10 h-3">
            <p class="mx-4 w-3 h-3 absolute rounded-full bg-green-500 animate-ping motion-reduce:animate-none @(AppState.IsSharing ? "" : "hidden")" />
            <p class="mx-4 w-3 h-3 absolute rounded-full @(AppState.IsSharing ? "bg-green-500" : "bg-red-500")" />
        </div>
        <p class="text-sm text-gray-400">@(AppState.IsSharing ? "Sharing cart" : "Sharing starting...")</p>
    </div>
    <p class="my-2"><b>Members: </b>@string.Join(", ", CartGroup.OtherUsers)</p>
</div>


