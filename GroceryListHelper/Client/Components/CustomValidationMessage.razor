<ul class="validation-errors" style="display: @(string.IsNullOrEmpty(Message) ? "none" : "block")">
    <li class="validation-message">@Message</li>
</ul>

@code {
    [Parameter] public string Message { get; set; }
    [CascadingParameter] public EditContext Context { get; set; }

    protected override void OnInitialized()
    {
        Context.OnFieldChanged += ClearMessage;
    }

    private void ClearMessage(object sender, FieldChangedEventArgs e)
    {
        Message = string.Empty;
        StateHasChanged();
    }
}