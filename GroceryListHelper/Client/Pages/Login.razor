@page "/login"

<h3>Login</h3>
<EditForm Model="user" OnValidSubmit="LoginMethod">
    <FluentValidationValidator />
    <ValidationSummary />
    <CustomValidationMessage Message="@message"/>
    <div class="form-group">
        <label for="email">Email: </label>
        <InputText id="email" class="form-control" placeholder="Enter email" @bind-Value="@user.Email" />
    </div>
    <div class="form-group">
        <label for="password">Password: </label>
        <InputText id="password" type="password" class="form-control" placeholder="Password" @bind-Value="@user.Password" />
    </div>
    <button class="btn btn-primary" type="submit" disabled="@isBusy">Login</button>
</EditForm>



