@page "/"
@inherits IndexBase
<Microsoft.AspNetCore.Components.Web.Extensions.Head.Title Value="Grocery List Helper v1.3" />

<h3 class="text-center">Grocery List Collector<sup> &copy;M&S Productions</sup></h3>
<h5 class="text-center">Helps you remember</h5>
<CartComponent />

<CartSummaryRowComponent />

<AuthorizeView>
    <Authorized>
        <ChooseCartShareOptionComponent />
        @if (ViewModel.ShareMode == ShareModeType.Self)
        {
            <ShareSelfCartComponent />
        }
        else
        {
            <JoinCartComponent />
        }
        <p style="margin-left: 1rem;">@ViewModel.ShareCartInfo</p>
    </Authorized>
</AuthorizeView>

<Modal />
