@page "/groupcart/{GroupId:guid}"
@inherits GroupCartBase

<AuthorizedView AuthorizedCondition="CheckAccess">
    @if (group is not null)
    {
        <div class="group-cart-info-container">
            <h3>@group.Name</h3>
            <p><b>Members: </b>@string.Join(", ", group.OtherUsers)</p>
        </div>
    }
    <CartComponent />
    <CartSummaryRowComponent />

    <div class="share-info-container">
        @if (ViewModel.IsPolling)
        {
            <button class="btn btn-danger" @onclick="ExitCart">Stop sharing</button>
            <p id="share-cart-info">@ViewModel.ShareCartInfo</p>
        }
        else
        {
            <button class="btn btn-success" @onclick="JoinCart">Join cart sharing</button>
        }
    </div>
</AuthorizedView>


