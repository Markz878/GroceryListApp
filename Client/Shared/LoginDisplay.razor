<AuthorizeView>
    <Authorized>
        <strong>Hello, @context.User.Identity.Name!</strong>
        <form method="post" action="api/Account/Logout">
            <button class="nav-link" type="submit">Sign out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="nav-link" href="api/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>