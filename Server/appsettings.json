{
  "ConnectionStrings": {
    "DatabaseConnection": "Data Source=database.db;"
  },
  "AccessTokenLifeTimeMinutes": 5,
  "RefreshTokenLifeTimeMinutes": 43200,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIPHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/*",
        "Period": "1s",
        "Limit": 10
      }
    ]
  }
}
