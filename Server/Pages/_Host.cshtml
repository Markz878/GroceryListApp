@page "/"
@namespace BlazorAzureAdBff.Pages
@using GroceryListHelper.Client
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Grocery List Helper</title>
    <base href="~/" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="GroceryListHelper.Client.styles.css" rel="stylesheet" />
    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />
</head>
<body>

    <div id="app">
        <div class="message">Loading your cart app...</div>
        <div class="loader"></div>
    </div>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.webassembly.js" ></script>
    <script src="https://kit.fontawesome.com/52e1a78681.js" crossorigin="anonymous"></script>
    <script>navigator.serviceWorker.register('service-worker.js');</script>
    <script src="js/antiForgeryToken.js" ></script>
    @Html.AntiForgeryToken()
</body>
</html>
